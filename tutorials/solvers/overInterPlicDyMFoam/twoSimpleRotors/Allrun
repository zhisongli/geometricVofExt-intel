#!/bin/sh
cd "${0%/*}" || exit                                # Run from this directory
. ${WM_PROJECT_DIR:?}/bin/tools/RunFunctions        # Tutorial run functions
#------------------------------------------------------------------------------

canCompile || exit 0    # Dynamic code

./Allrun.pre

# Serial
#runApplication $(getApplication)

# Parallel
runApplication decomposePar -cellDist -fileHandler collated

runParallel $(getApplication) -fileHandler collated

writeVtkSeries plicInterface plicSurf
writeVtkSeries isoInterface isoSurf
writeVtkSeries rotors rotors
writeVtkSeries zPlaneCut face1

touch ${PWD##*/}.foam

#------------------------------------------------------------------------------
